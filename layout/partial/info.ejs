<div class="ui-padding ui-col">
<h1><%- page.title %></h1>
<p>创建于 <%= date(page.date) %></p>
<% if(page.tags && page.tags.length){ %>
<p>
  Tags:
  <% page.tags.forEach((a) => { %>
  <a href="/<%= a.path %>"><%= a.name %></a>
  <% }); %>
</p>
<% } %>
<% if(page.categories && page.categories.length){ %>
<p>
  Categories:
  <% page.categories.forEach((a) => { %>
  <a href="/<%= a.path %>"><%= a.name %></a>
  <% }) %>
</p>
<% } %>
</div>