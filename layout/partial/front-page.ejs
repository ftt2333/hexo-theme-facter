<div class="ui-card ui-shadow" style="min-width: 350px; padding: 20px 0 20px 0;">
  <p style=" color: var(--title-col); margin: 10px; padding: 0 40px 0 40px; font-size: 40px; text-align: center;"><%- theme.title %></p>
  <div style="padding: 0 20px 0 20px; margin: 10px">
    <p style="text-align: center; margin: 0; padding: 0;" id="yiyan-content"></p>
    <p style="text-align: right; margin: 0; padding: 0;" id="yiyan-from"></p>
  </div>
</div>
<script>
$(() => {
  fetch('https://v1.hitokoto.cn').then((res) => {
    return res.json()
  }).then((res) => {
    $('#yiyan-content').text(`${res.hitokoto}`)
    let from_who = res.from_who
    let s = ''
    if (from_who) s = `-- ${from_who}`
    $('#yiyan-from').html(s)
  })
})
</script>