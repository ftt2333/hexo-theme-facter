<div class="ui-row ui-space-between">
  <div>
    <a href="/" style="color: var(--header-col);"><%= config.title %></a>
  </div>
  <div class="ui-row">
    <% theme.menu.forEach((a) => { %>
    <div class="ui-row-space"></div>
    <% if (!a.link) { %>
      <div class="ui dropdown">
        <div style="color: var(--title-col);"><%= a.name %><i class="dropdown icon"></i></div>
        <div class="menu" style="width: max-content;">
          <% a.links.forEach((b) => { %>
            <a class="item" href="<%= b.link %>" style="display: flex;">
              <% if (b.avatar) { %>
                <img class="image" src="<%= b.avatar %>">
              <% } %>
              <div style="flex: 1;"></div>
              <div><%= b.name %></div>
            </a>
          <% }) %>
        </div>
      </div>
    <% } else { %>
      <a href="<%= a.link %>" style="color: var(--header-col); margin: 2px;">
        <%= a.name %>
      </a>
    <% }}) %>
  </div>
</div>